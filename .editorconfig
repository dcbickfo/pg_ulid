# EditorConfig for PostgreSQL ULID extension
# https://editorconfig.org

root = true

# Default settings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# C source files
[*.{c,h}]
indent_style = tab
indent_size = 4
tab_width = 4

# SQL files
[*.sql]
indent_style = space
indent_size = 4

# Makefiles require tabs
[{Makefile,*.mk}]
indent_style = tab

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON and metadata
[*.json]
indent_style = space
indent_size = 3

# Markdown
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
indent_style = space
indent_size = 4
